<%- include('../partials/head'); %>
    </head>

    <body class="bg-gray-100 text-gray-800 font-sans">

        <!-- Navigation menu-->
        <%- include('../partials/nav'); %>

            <!-- Add Listing Form -->
            <div class="max-w-lg mx-auto mt-8 bg-white p-8 rounded-lg shadow-lg animate-fade-in">
                <h2 class="text-2xl font-semibold text-center mb-6">Add Your Home</h2>
                <form action="/home" method="POST" enctype="multipart/form-data" class="space-y-5">

                    <div>
                        <label for="aboutHome" class="block font-medium mb-1">About Home</label>
                        <input type="text" id="aboutHome" name="aboutHome" placeholder="Cozy Lakeside Cottage"
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            required>
                    </div>

                    <div>
                        <label for="homeAddress" class="block font-medium mb-1">Address</label>
                        <input type="text" id="homeAddress" name="homeAddress" placeholder="123 Oak Street, Springfield"
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            required>
                    </div>

                    <div>
                        <label for="contactInfo" class="block font-medium mb-1">Contact (Phone or Email)</label>
                        <input type="text" id="contactInfo" name="contactinfo"
                            placeholder="you@example.com or +1 718 222 2222"
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            required>
                    </div>

                    <div>
                        <label for="homePrice" class="block font-medium mb-1">Price per Night (â‚¹)</label>
                        <input type="number" id="homePrice" name="homePrice" placeholder="2500" min="0"
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            required>
                    </div>

                    <div>
                        <label for="homeImage" class="block font-medium mb-1">Home Image</label>
                        <input type="file" id="homeImage" name="homeImage" accept="image/*"
                            class="block w-full text-sm text-gray-500" onchange="previewImage(event)" required>
                        <img id="imgPreview" src="" alt="Image preview"
                            class="mt-4 w-full max-h-64 object-cover rounded hidden">
                    </div>

                    <button type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 active:scale-95 transition-transform text-white py-3 rounded-lg font-medium">
                        List This Home
                    </button>

                </form>
            </div>

            <style>
                @keyframes slide-down {
                    0% {
                        transform: translateY(-100%);
                    }

                    100% {
                        transform: translateY(0);
                    }
                }

                @keyframes fade-in {
                    0% {
                        opacity: 0;
                        transform: translateY(20px);
                    }

                    100% {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }

                .animate-slide-down {
                    animation: slide-down 0.5s ease-out;
                }

                .animate-fade-in {
                    animation: fade-in 0.6s ease-out;
                }
            </style>

    </body>

    <script>
        document.addEventListener("DOMContentLoaded", function () {


            // Image preview
            window.previewImage = function (event) {
                const reader = new FileReader();
                reader.onload = e => {
                    document.getElementById('imgPreview')
                        .setAttribute('src', e.target.result);
                    document.getElementById('imgPreview')
                        .classList.remove('hidden');
                };
                reader.readAsDataURL(event.target.files[0]);
            };
        });
    </script>
    </body>

    </html>
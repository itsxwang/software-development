<%- include('../partials/head'); %>
    <style>
        @keyframes fade-in {
            0% {
                opacity: 0;
                transform: scale(0.95);
            }

            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        .animate-fade-in {
            animation: fade-in 0.3s ease-out forwards;
        }
    </style>
    </head>

    <body class="bg-gray-100 text-gray-800 font-sans min-h-screen flex flex-col">
        <%- include('../partials/nav'); %>

            <main class="flex-grow flex items-center justify-center">

                <div class="bg-white/30 backdrop-blur-md p-10 rounded-xl shadow-lg animate-fade-in scale-95 sm:scale-100 w-[90%] sm:w-auto ">

                    <div class="grid grid-cols-2 gap-y-2 justify-items-center text-center">
                        <h1 class="text-3xl font-bold col-span-2">Delete listing</h1>
                        <p class="col-span-2">Are you sure you want to delete this listing?</p>

                        <div
                            class="col-span-2 flex flex-col items-center justify-center sm:items-stretch sm:flex-row gap-2 mt-5">
                            <a href="/host/delete-home/<%= id %>"
                                class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded transition duration-200">Delete</a>
                            <a href="/host/host-homes"
                                class="bg-gray-500 hover:bg-gray-600 text-white py-2 px-4 rounded transition duration-200">Back</a>
                        </div>
                    </div>
                </div>
            </main>

    </body>

    </html>
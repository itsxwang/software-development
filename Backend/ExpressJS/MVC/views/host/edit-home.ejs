<%- include('../partials/head'); %>
    <style>
        @keyframes fadeSlideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-slide {
            animation: fadeSlideIn 0.5s ease-out both;
        }
    </style>
    </head>

    <body class="min-h-screen bg-gray-100 text-gray-800 font-sans">

        <!-- Navbar -->
        <%- include('../partials/nav'); %>

            <main class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-lg animate-fade-slide">

                <!-- Heading -->
                <h1
                    class="text-4xl font-extrabold text-center mb-8 text-transparent bg-clip-text bg-gradient-to-r from-blue-500 via-purple-600 to-pink-500 drop-shadow-md">
                    <%= editing ? 'Edit' : 'Add' %> Your Listing
                </h1>

                <!-- Edit Form -->
                <form action="<%= editing ? ('/host/edit-home/' + home.id) : '/host/add-home' %>" method="POST"
                    enctype="multipart/form-data" class="space-y-6">

                    <!-- About Home -->
                    <div>
                        <label for="aboutHome" class="block text-sm font-medium mb-1 text-gray-700">Home Title</label>
                        <input type="text" id="aboutHome" name="aboutHome" value="<%= editing ? home.aboutHome : '' %>"
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            placeholder="e.g., Cozy Mountain Retreat" required>
                    </div>

                    <!-- Address -->
                    <div>
                        <label for="homeAddress" class="block text-sm font-medium mb-1 text-gray-700">Address</label>
                        <input type="text" id="homeAddress" name="homeAddress"
                            value="<%= editing ? home.homeAddress : '' %>"
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            placeholder="e.g., 123 Block A, Switzerland" required>
                    </div>

                    <!-- Contact Info -->
                    <div>
                        <label for="contactinfo" class="block text-sm font-medium mb-1 text-gray-700">Contact
                            Info</label>
                        <input type="text" id="contactinfo" name="contactinfo"
                            value="<%= editing ? home.contactinfo : '' %>"
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            placeholder="e.g., +41 123 456 789 or email@example.com" required>
                    </div>

                    <!-- Price -->
                    <div>
                        <label for="homePrice" class="block text-sm font-medium mb-1 text-gray-700">Price per Night
                            (â‚¹)</label>
                        <input type="number" id="homePrice" name="homePrice" min="0"
                            value="<%= editing ? home.homePrice : '' %>"
                            class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            placeholder="e.g., 7777" required>
                    </div>

                        <!-- Image Upload -->
                        <div>
                            <label for="homeImage" class="block text-sm font-medium mb-1 text-gray-700">Change
                                Image</label>
                            <input type="file" id="homeImage" name="homeImage" accept="image/*"
                                class="block w-full text-sm text-gray-500 mt-1" onchange="previewImage(event)">
                            <div class="mt-4">
                                <img id="imgPreview" src="<%= editing ? home.homeImage : '' %>" alt=""
                                    class="rounded-lg shadow max-h-64 w-full object-cover">
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit"
                            class="w-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold py-3 rounded-lg shadow-md transition transform hover:scale-105 active:scale-95">
                            <%= editing ? 'Save Changes' : 'Add Listing' %>
                        </button>
                </form>
            </main>

            <script>
                
                function previewImage(event) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        document.getElementById('imgPreview').src = e.target.result;
                    }
                    reader.readAsDataURL(event.target.files[0]);
                }
            </script>
    </body>

    </html>
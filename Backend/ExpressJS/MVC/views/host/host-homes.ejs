<%- include('../partials/head'); %>
    <style>
        .card {
            opacity: 0;
            transform: translateY(30px);
            animation: slideFadeIn 0.5s ease forwards;
        }

        @keyframes slideFadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
    </head>

    <body class="bg-gray-100 text-gray-800 font-sans">

        <!-- Navigation menu-->
        <%- include('../partials/nav'); %>

            <main class="max-w-6xl mx-auto p-4">
                <% if (homes.length===0) { %>
                    <p class="text-center mt-4 text-gray-600">No homes available right now. Check back later!</p>
                    <% } else { %>
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
                            <% homes.forEach(home=> { %>
                                <div
                                    class="card bg-white rounded-lg shadow hover:shadow-lg transform hover:-translate-y-1 transition p-4 flex flex-col justify-between">
                                    <!-- Image -->
                                    <div class="h-48 rounded overflow-hidden">
                                        <img src="<%= home.homeImage %>" alt="<%= home.aboutHome %>"
                                            class="w-full h-full object-cover">
                                    </div>

                                    <!-- Text Info -->
                                    <div class="mt-4 flex-1">
                                        <h2 class="text-xl font-semibold text-gray-800">
                                            <%= home.aboutHome %>
                                        </h2>
                                        <p class="text-gray-600 mt-1"><span class="font-medium">Address:</span>
                                            <%= home.homeAddress %>
                                        </p>
                                        <p class="text-gray-600 mt-1"><span class="font-medium">Contact:</span>
                                            <%= home.contactinfo %>
                                        </p>
                                        <p class="text-gray-800 font-bold mt-2">$<%= home.homePrice %> / night</p>
                                    </div>

                                    <!-- Edit and Delete Buttons -->
                                    <div class="mt-4 flex justify-center gap-4">
                                        <button
                                            class="bg-yellow-400 hover:bg-yellow-500 text-white px-4 py-2 rounded font-medium transition active:scale-95 shadow">
                                            Edit
                                        </button>
                                        <button
                                            class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded font-medium transition active:scale-95 shadow">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                                <% }); %>

                        </div>
                        <% } %>
            </main>

    </body>

    </html>
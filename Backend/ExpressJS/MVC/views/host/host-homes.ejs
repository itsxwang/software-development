<%- include('../partials/head'); %>
    <style>
        .card {
            opacity: 0;
            transform: translateY(30px);
            animation: slideFadeIn 0.5s ease forwards;
        }

        @keyframes slideFadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
    </head>

    <body class="bg-gray-100 text-gray-800 font-sans">

        <!-- Navigation menu-->
        <%- include('../partials/nav'); %>

            <main class="max-w-6xl mx-auto p-4">
                <% if (homes.length===0) { %>
                    <p class="text-center mt-4 text-gray-600">No homes available right now. Check back later!</p>
                    <% } else { %>
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
                            <% homes.forEach(home=> { %>
                                <div
                                    class="card bg-white rounded-lg shadow hover:shadow-lg transform hover:-translate-y-1 transition p-4 flex flex-col justify-between">
                                    <!-- Image -->
                                    <div class="h-48 rounded overflow-hidden">
                                        <img src="<%= home.image %>" alt="<%= home.name %>"
                                            class="w-full h-full object-cover">
                                    </div>

                                    <!-- Text Info -->
                                    <div class="mt-4 flex-1">
                                        <h2 class="text-xl font-semibold text-gray-800">
                                            <%= home.name %>
                                        </h2>
                                        <p class="text-gray-600 mt-1"><span class="font-medium">Address:</span>
                                            <%= home.address %>
                                        </p>
                                        <p class="text-gray-600 mt-1 line-clamp-2 sm:line-clamp-3 xl:line-clamp-4"><span class="font-medium">Description:</span>
                                            <%= home.description %>
                                        </p>
                                        <p class="text-gray-800 font-bold mt-2">$<%= home.price %> / night</p>
                                    </div>

                                    <!-- Edit and Delete Buttons -->
                                    <div class="mt-4 flex justify-center gap-4">
                                        <a
                                            href="/host/edit-home/<%= home.id %>?editing=true"
                                            class="bg-yellow-400 hover:bg-yellow-500 text-white px-4 py-2 rounded font-medium transition active:scale-95 shadow">
                                            Edit
                                        </a>
                                        <a
                                        href="/host/delete-home-confirmation/<%= home.id %>"
                                            class="delBtn bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded font-medium transition active:scale-95 shadow cursor-pointer">
                                            Delete
                                        </a>
                                    </div>
                                </div>
                                <% }); %>

                        </div>
                        <% } %>
            </main>
    </body>

    </html>
<%- include('../partials/head'); %>
    </head>

    <body class="min-h-screen flex flex-col bg-gray-50 text-gray-800 font-sans">

        <!-- Navbar -->
        <%- include('../partials/nav'); %>

            <!-- Main Content -->
            <main class="flex flex-col max-w-4xl mx-auto p-6 mt-8">
                <!-- Home Image -->
                <div class="w-full rounded-xl overflow-hidden shadow-lg">
                    <img src="<%= home.homeImage %>" alt="<%= home.aboutHome %>"
                        class="w-full h-[60vh] object-cover rounded-xl" />
                </div>

                <!-- Home Details -->
                <div class="mt-8 space-y-3">
                    <h1 class="text-4xl font-serif font-bold text-gray-800 drop-shadow-sm">
                        <%= home.aboutHome %>
                    </h1>
                    <p class="text-gray-600 text-lg"><span class="font-semibold">Address:</span>
                        <%= home.homeAddress %>
                    </p>
                    <p class="text-gray-600 text-lg"><span class="font-semibold">Contact:</span>
                        <%= home.contactinfo %>
                    </p>
                    <p class="text-2xl font-bold text-gray-800">$<%= home.homePrice %> / night</p>
                </div>

                <!-- Action Buttons -->
                <div class="mt-8 flex space-x-4">
                    <a href="/Bookings"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow transition transform hover:scale-105 active:scale-95">
                        Book Now
                    </a>
                    <a id="favourites"
                        data-id="<%= home.id %>"
                        class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-3 px-6 rounded-lg shadow transition transform hover:scale-105 active:scale-95">
                        Add to Favourites
                    </a>

                </div>
            </main>

            <!-- Scripts for Animation -->
            <script>
                const favButton = document.getElementById('favourites');
                favButton.addEventListener('click', function (event) {
                    event.preventDefault();
                    if (favButton.textContent.trim() === 'Add to Favourites') {
                        favButton.classList.add('scale-105');
                        favButton.textContent = 'Added to Favourites';


                        setTimeout(() => {
                            favButton.classList.remove('scale-105');
                            fetch('/favourites', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    id: favButton.dataset.id,
                                    like: true
                                })
                            })
                        }, 600);
                    } else {
                        favButton.classList.add('scale-105');
                        favButton.textContent = 'Add to Favourites';
                        setTimeout(() => {

                            favButton.classList.remove('scale-105');
                            fetch('/favourites', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    id: favButton.dataset.id,
                                    like: false
                                })
                            })

                        }, 300);
                    }
                });
            </script>

            <!-- Tailwind-style animation class added via JS -->
            <style>
                #favourites.scale-105 {
                    transition: transform 0.5s ease, opacity 0.3s ease;
                    transform: scale(1.1);
                    opacity: 0.9;
                }
            </style>

    </body>

    </html>